version: '3.8'

services:
  db:
    image: mysql:8.0
    container_name: mysql-db
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: root      # Sets the root password
      MYSQL_DATABASE: foyer          # Creates the "foyer" database on startup
    ports:
      - "3306:3306"                  # Maps MySQL port
    volumes:
      - mysql-data:/var/lib/mysql    # Data persistence

  app:
    build: .
    image: 192.168.252.114:8083/springboot-foyer:3.0.0
    container_name: springboot-app
    restart: always
    depends_on:
      - db
    ports:
      - "9097:8089"  # Maps the Spring Boot application port
    environment:
      SPRING_DATASOURCE_URL: jdbc:mysql://db:3306/foyer   # Database URL, pointing to MySQL container
      SPRING_DATASOURCE_USERNAME: root                      # Root username for the DB
      SPRING_DATASOURCE_PASSWORD: root                      # Root password for the DB
      SPRING_JPA_HIBERNATE_DDL_AUTO: update                 # Auto-creates database schema

volumes:
  mysql-data: